  "rules": [
    { "id": 2001, "tags": ["core", "lfi"], "target": ["URI", "ARGS_COMBINED", "BODY"], "match": "REGEX", "pattern": "(?:\\.\\./|\\.\\.\\\\)", "action": "DENY", "score": 10 },
    { "id": 2002, "tags": ["core", "lfi"], "target": ["URI", "ARGS_COMBINED", "BODY"], "match": "REGEX", "pattern": "(?:%2e%2e/|%2e%2e\\\\|%252e%252e/|%252e%252e\\\\)", "action": "DENY", "score": 10, "caseless": true },
    { "id": 2003, "tags": ["core", "lfi"], "target": ["URI", "ARGS_COMBINED", "BODY"], "match": "REGEX", "pattern": "(?:\\\\uff0e\\\\uff0e/|\\\\uff0e\\\\uff0e\\\\)", "action": "DENY", "score": 10 },
    { "id": 2004, "tags": ["core", "lfi"], "target": ["URI", "ARGS_COMBINED", "BODY"], "match": "REGEX", "pattern": "/etc/passwd", "action": "DENY", "score": 10 },
    { "id": 2005, "tags": ["core", "lfi"], "target": ["URI", "ARGS_COMBINED", "BODY"], "match": "REGEX", "pattern": "(?i)(php|file|glob|data|ftp|zlib|phar)\\s*:", "action": "DENY", "score": 20 },
    { "id": 2006, "tags": ["core", "lfi"], "target": ["URI", "ARGS_COMBINED", "BODY"], "match": "REGEX", "pattern": "(?i)(%c0%ae[/\\\\]|%c0%af[/\\\\]|%e0%80%ae[/\\\\]|%e0%80%af[/\\\\])", "action": "DENY", "score": 20 },
    { "id": 2007, "tags": ["core", "lfi"], "target": ["URI", "ARGS_COMBINED", "BODY"], "match": "REGEX", "pattern": "\\\\[a-zA-Z0-9\\.\\-_]+\\\\[a-zA-Z0-9\\$]+", "action": "DENY", "score": 10 },
    { "id": 2008, "tags": ["core", "lfi"], "target": ["URI", "ARGS_COMBINED", "BODY"], "match": "REGEX", "pattern": "[a-zA-Z]:[/\\\\]", "action": "DENY", "score": 10 },
    { "id": 2009, "tags": ["core", "lfi"], "target": ["URI", "ARGS_COMBINED", "BODY"], "match": "REGEX", "pattern": "(?i)(php://input|php://fd|expect://)", "action": "DENY", "score": 20 },
    { "id": 2010, "tags": ["core", "lfi"], "target": ["URI", "ARGS_COMBINED", "BODY"], "match": "REGEX", "pattern": "\\\\u0025", "action": "DENY", "score": 10 },
    { "id": 2011, "tags": ["core", "lfi"], "target": ["URI", "ARGS_COMBINED", "BODY"], "match": "REGEX", "pattern": "\\\\u0025(\\\\u0032\\\\u0035)", "action": "DENY", "score": 20 },
    { "id": 2012, "tags": ["core", "lfi"], "target": ["URI", "ARGS_COMBINED", "BODY"], "match": "REGEX", "pattern": "(?i)%C0%AE%C0%AE%C0%AF%C0%AE%C0%AE%C0%AF", "action": "DENY", "score": 20 },
    { "id": 2013, "tags": ["core", "lfi"], "target": ["URI", "ARGS_COMBINED", "BODY"], "match": "REGEX", "pattern": "(?i)%25C0%25AE%25C0%25AE%25C0%25AF", "action": "DENY", "score": 20 }
  ]
